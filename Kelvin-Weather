const kelvin = 280  // The value saved to kelvin will stay constan
let celsius = kelvin - 273 // Celsius is similar to Kelvin â€” the only difference is that Celsius is 273 degrees less than Kelvin.
let fahrenheit = celsius * (9/5) + 32
fahrenheit = Math.floor(fahrenheit) // to  get a decimal number.
/* add newton*/
let newton = celsius * (33/100)
newton = Math.floor(newton) // to  get a decimal number.

// Print in console 
console.log(`The temperature is ${fahrenheit} degrees Fahrenheit.`)
console.log(`The temperature is ${newton} Newton.`)
